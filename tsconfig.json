{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./packages/server/src/*"],
      "@web/*": ["./packages/web/src/*"]
    }
  },
  "references": [
    { "path": "./packages/server" },
    { "path": "./packages/web" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}